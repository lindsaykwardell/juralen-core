{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "lib": ["es2015", "es5", "es6", "esnext.asynciterable", "dom"]
  },
  "include": ["src/**/*"]
}
